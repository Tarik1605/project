<h1>All Users</h1>

<ul>
  <% @users.each do |user| %>
      <li>
        <%= user.name %>
      
        <%= user.last_name %>

        <%= user.email %>

        <%= link_to "Show", user %>

        <%= link_to "Edit", edit_user_path(user) %>

        <%= link_to "Delete", user, data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
      </li>

  <% end %>
</ul>

<%= link_to "New User", new_user_path %>

